{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["esnext", "dom", "dom.iterable"],
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "rootDirs": [],
    "baseUrl": "src",
    "paths": {
      "utils/*": ["utils/*"],
      "routes/*": ["routes/*"],
      "components/*": ["components/*"],
      "services/*": ["services/*"],
      "container/*": ["container/*"],
      "views/*": ["views/*"]
    },
  },
  "include": [
    "./src/**/*"
  ]
}